name: vicguzher

on:
  workflow_dispatch:
  issues:
    types: 
      - opened
      - edited

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Clonar el repositorio y establecer el espacio de trabajo
        uses: actions/checkout@v3
      - name: Configurar Java
        uses: actions/setup-java@v3
        with:
          distribution: 'temurin'
          java-version: '16'
      - name: Construir el artefacto
        run: |
          chmod +x gradlew
          ./gradlew assemble

  test:
    needs: build
    runs-on: ubuntu-latest
    steps:
      - name: Clonar el repositorio y establecer el espacio de trabajo
        uses: actions/checkout@v3
      - name: Configurar Java
        uses: actions/setup-java@v3
        with:
          distribution: 'temurin'
          java-version: '16'
      - name: Ejecutar pruebas
        run: |
          chmod +x gradlew
          ./gradlew test

